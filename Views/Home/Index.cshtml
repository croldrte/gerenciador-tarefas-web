@model TaskManager.ViewModels.TaskAndCategoryViewModel

<header>
  <nav class="navbar fs-2 my-5">
    <div class="container">
      <div class="navbar-brand">Tarefas</div>
      <div class="navbar-icons d-flex gap-4">
        <i id="btn-add-task" class="bi bi-plus" role="button" tabindex="0"></i>
        <i class="bi bi-sun" role="button" tabindex="0"></i>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container">
    <div class="row">
      <div class="col-3">
        @foreach (var category in Model.Categories)
        {
          <div class="d-flex align-items-center gap-2 mb-3">
            <i class="bi bi-circle-fill" style="color:@category.Color"></i>
            <span>@category.Name</span>
          </div>
        }
      </div>
      <div class="col-9">
        @foreach (var task in Model.Tasks)
        {
          <div class="d-flex justify-content-between align-items-center py-4">
            <span>@task.Title</span>
            <div class="d-flex gap-5 align-items-center">
              <span>@task.Category</span>
              <span>@(task.DateTime?.ToString("HH\\:mm") ?? "")</span>
              <i class="bi bi-three-dots-vertical" role="button" tabindex="0"></i>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</main>

<!-- Modal Adicionar Tarefa -->
<div class="modal fade" id="modal-add-task" tabindex="-1" aria-labelledby="modal-add-task-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-add-task-label">Adicionar Tarefa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        <form id="form-add-task">
          <div class="mb-3">
            <label for="task-title" class="form-label">Título</label>
            <input type="text" class="form-control" id="task-title" name="Title" required>
          </div>
          <div class="mb-3">
            <label for="task-description" class="form-label">Descrição</label>
            <textarea class="form-control" id="task-description" name="Descricao" rows="3"></textarea>
          </div>
          <div class="mb-3">
            <label for="task-datetime" class="form-label">Data</label>
            <input type="datetime-local" class="form-control" id="task-datetime" name="DateTime">
          </div>
          <div class="mb-3">
            <label for="task-category" class="form-label">Categoria</label>
            <select class="form-control" id="task-category" name="Category">
              <option value="Trabalho">Trabalho</option>
              <option value="Estudo">Estudo</option>
              <option value="Entretenimento">Entretenimento</option>
              <option value="Família">Família</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Adicionar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>