@model TaskManager.ViewModels.TaskAndCategoryViewModel

<header>
  <nav class="navbar fs-2 my-5">
    <div class="container">
      <div class="navbar-brand">Tarefas</div>
      <div class="navbar-icons d-flex gap-4">
        <i id="btn-add-task" class="bi bi-plus" role="button" tabindex="0"></i>
        <i class="bi bi-sun" role="button" tabindex="0"></i>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container">
    <div class="row">
      <div class="col-3">
        @foreach (var category in Model.Categories)
        {
          <div class="d-flex align-items-center gap-3 mb-4">
            <i class="bi bi-circle-fill" style="color:@category.Color;font-size:32px;"></i>
            <span class="category-name">@category.Name</span>
          </div>
        }
      </div>
      <div class="col-9">
        @foreach (var task in Model.Tasks)
        {
          <div class="d-flex justify-content-between align-items-center py-4" data-task-id-div="@task.Id">
            <span class="task-title">@task.Title</span>
            <div class="d-flex gap-5 align-items-center">
              <span class="task-category">
                <i class="bi bi-circle-fill" style="color:@task.Category.Color;font-size:18px;"></i>
                @task.Category.Name
              </span>
              <span class="task-time">@(task.DateTime?.ToString("HH\\:mm") ?? "")</span>
              <div class="dropdown">
                <i class="bi bi-three-dots-vertical" role="button" tabindex="0" data-bs-toggle="dropdown"
                  aria-expanded="false"></i>
                <ul class="dropdown-menu">
                  <li>
                    <a class="dropdown-item btn-edit-task" href="#" data-task-id="@task.Id">Editar</a>
                  </li>
                  <li>
                    <a class="dropdown-item btn-delete-task" href="#" data-task-id="@task.Id">Excluir</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</main>

<!-- Modal Adicionar Tarefa -->
<div class="modal fade" id="modal-add-task" tabindex="-1" aria-labelledby="modal-add-task-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content px-5 py-3">
      <div class="modal-body">
        <form id="form-add-task">
          <div class="modal-header px-0 pb-4 border-0">
            <button type="button" class="btn btn-outline-secondary border-0 p-0"
              data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Adicionar</button>
          </div>
          <div class="mb-3">
            <label for="task-title" class="form-label">
              <h4>Título</h4>
            </label>
            <input type="text" class="form-control" id="task-title" name="Title" required>
          </div>
          <div class="mb-3">
            <label for="task-description" class="form-label">
              <h4>Descrição</h4>
            </label>
            <textarea class="form-control" id="task-description" name="Description" rows="3"></textarea>
          </div>
          <div class="mb-4">
            <label for="task-datetime" class="form-label">
              <h4>Data</h4>
            </label>
            <input type="datetime-local" class="form-control" id="task-datetime" name="DateTime">
          </div>
          <div>
            <label class="form-label">
              <h4>Categoria</h4>
            </label>
            <div class="d-flex flex-wrap gap-2 align-items-center">
              @foreach (var category in Model.Categories)
              {
                <input type="radio" class="btn-check" name="CategoryId" id="cat-@category.Id" value="@category.Id"
                  autocomplete="off" required>
                <label class="btn d-flex align-items-center gap-3 me-5 p-0" for="cat-@category.Id">
                  <i class="bi bi-circle-fill" style="color:@category.Color;font-size:32px;"></i>
                  <span class="category-name">@category.Name</span>
                </label>
              }
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Editar Tarefa -->
<div class="modal fade" id="modal-edit-task" tabindex="-1" aria-labelledby="modal-edit-task-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content px-5 py-3">
      <div class="modal-body">
        <form id="form-edit-task">
          <input type="hidden" id="edit-task-id" name="Id" />
          <div class="modal-header px-0 pb-4 border-0">
            <button type="button" class="btn btn-outline-secondary border-0 p-0"
              data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </div>
          <div class="mb-3">
            <label for="edit-task-title" class="form-label"><h4>Título</h4></label>
            <input type="text" class="form-control" id="edit-task-title" name="Title" required>
          </div>
          <div class="mb-3">
            <label for="edit-task-description" class="form-label"><h4>Descrição</h4></label>
            <textarea class="form-control" id="edit-task-description" name="Description" rows="3"></textarea>
          </div>
          <div class="mb-4">
            <label for="edit-task-datetime" class="form-label"><h4>Data</h4></label>
            <input type="datetime-local" class="form-control" id="edit-task-datetime" name="DateTime">
          </div>
          <div>
            <label class="form-label"><h4>Categoria</h4></label>
            <div class="d-flex flex-wrap gap-2 align-items-center">
              @foreach (var category in Model.Categories)
              {
                <input type="radio" class="btn-check" name="CategoryId" id="edit-cat-@category.Id" value="@category.Id" autocomplete="off" required>
                <label class="btn d-flex align-items-center gap-3 me-5 p-0" for="edit-cat-@category.Id">
                  <i class="bi bi-circle-fill" style="color:@category.Color;font-size:32px;"></i>
                  <span class="category-name">@category.Name</span>
                </label>
              }
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  
<!-- Modal Excluir Tarefa -->
<div class="modal fade" id="modal-confirm-delete" tabindex="-1" aria-labelledby="modal-confirm-delete-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content px-4 py-3">
      <div class="modal-body">
        <h5 id="modal-confirm-delete-label">Tem certeza que deseja excluir esta tarefa?</h5>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="btn-confirm-delete">Excluir</button>
      </div>
    </div>
  </div>
</div>