@model List<TaskManager.Models.Category>

<div class="d-flex filter align-items-center gap-3 mb-4 filter-important" role="button" tabindex="0">
  <i class="bi bi-star-fill" style="font-size:28px;"></i>
  <span>Importantes</span>
</div>
<div class="d-flex filter align-items-center gap-3 mb-4 filter-late" role="button" tabindex="0">
  <i class="bi bi-hourglass-bottom" style="font-size:28px;"></i>
  <span>Atrasadas</span>
</div>
<div class="d-flex filter align-items-center gap-3 mb-4 filter-week" role="button" tabindex="0">
  <i class="bi bi-calendar-week-fill" style="font-size:28px;"></i>
  <span>Esta semana</span>
</div>
<div class="d-flex filter align-items-center gap-3 mb-5 filter-done" role="button" tabindex="0">
  <i class="bi bi-check-circle-fill" style="font-size:28px;"></i>
  <span>Conclu√≠das</span>
</div>

@foreach (var category in Model)
{
  <div class="d-flex filter align-items-center gap-3 mb-4 filter-category" role="button" tabindex="0"
       data-category-id="@category.Id" id="filter-category-@category.Id">
    <i class="bi bi-circle-fill" style="color:rgba(@category.Color.ToRGB(), .5); font-size:28px;"></i>
    <span>@category.Name</span>
  </div>
}